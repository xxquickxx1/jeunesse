<nav id="products-fast-nav">
  <h3>
    <%= link_to refinery.products_category_path(@root_category) do %>
      <%= @root_category.title %>
    <% end %>
  </h3>
  <ul>
    <% @root_category_products.each do |product| %>
      <li>
        <%= link_to product.title, refinery.products_product_path(product, referer: refinery.products_category_path(@root_category)) %>
      </li>
    <% end %>
  </ul>
</nav>