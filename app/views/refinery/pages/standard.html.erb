<script type="text/javascript">


$(document).ready(function(){

$(document).scroll(function(){
  if($(this).scrollTop() > 50){
    $('.standard-bg h1').addClass('animated fadeOutLeft');
    $('.standard-bg a').addClass('animated fadeOutRight');
  }
});


$(document).scroll(function(){
  if($(this).scrollTop() < 50){
  $('.standard-bg h1').removeClass(' fadeOutLeft').addClass('fadeInLeft');
    $('.standard-bg a').removeClass(' fadeOutRight').addClass('fadeInRight');
    
  }
});

});

</script>