<div class="wrapper" style="background-color:white; margin-top:-10px; padding:6px 0; min-height:1000px;">

    <div class="row-flex">
        <div class="small-3 large-3 columns popular-blog">
       
        </div>


        <div class="small-7 large-7 columns main-blog" style="padding:25px;">

            <% content_for :body do %>
              <%= raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) if Refinery::Pages.default_parts.any? %>

              <% if @posts.any? %>
                <section id="blog_posts">
                  <%= render :partial => "/refinery/blog/shared/post", :collection => @posts %>
                  <%= will_paginate @posts %>
                </section>
              <% else %>
                <p><%= t('.no_blog_articles_yet') %></p>
              <% end %>
            <% end %>

            <% content_for :side_body_prepend do -%>
  <%= raw @page.content_for(Refinery::Pages.default_parts.second.to_sym) %>
<% end if Refinery::Pages.default_parts.many? -%>
<%= render '/refinery/blog/shared/body_content_right' %>


<%= render "/refinery/content_page" %>



        </div>

        <div class="small-2 large-2 columns hide-on-small more-blog">
      
        </div>
    </div>





</div>