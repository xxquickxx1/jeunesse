


<div class="row" style="margin-top:100px;">
<div class="left">
<%= link_to 'Dashboard', account_path, class: 'button success' %>
</div>
<div class="right">
<%= link_to 'New Blog', new_template_path(current_user), class: 'button warning' %>
</div>

<% if @templates.empty? %>
    
    <div class=" course" style="padding:40px;">
    <h3>Oh no! You have no blogs yet!<small> Why dont you start one?</small></h3>
    </div>

    <% end %>
  
</div>


      <ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-2 template-grid">
        

       



           <% @templates.each do |template| %>
           <%= link_to template_userblogs_path(template) do %>
            <li class="item">
               <center><h5><%= template.title %></h5></center>
               <center><p><%= truncate(template.description.capitalize, length: 80) %></p></center> 

                 <div style="position:absolute; bottom:0; left:0; right:0; padding:10px;">
                   <hr>
                     <div class="small-6 large-6 columns"><span style="color:lightgrey;"><%= template.category.capitalize %></span>
                     </div>
                   <div class="small-6 large-6 columns text-right"> 
                     
                      <%= link_to 'Edit', edit_template_path(template) %>
                      <%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %>
                   </div>

                   </div>

              
            </li>
            <% end %>
              <% end %>
      
      </ul>

</div>